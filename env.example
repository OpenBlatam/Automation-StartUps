# Configuración de Variables de Entorno

# Configuración de la aplicación
SECRET_KEY=tu-clave-secreta-aqui-cambiar-en-produccion
FLASK_ENV=development
FLASK_DEBUG=True

# Configuración de base de datos
# Para desarrollo (SQLite)
DATABASE_URL=sqlite:///inventory.db

# Para producción (PostgreSQL)
# DATABASE_URL=postgresql://usuario:password@localhost/inventory_db

# Para producción (MySQL)
# DATABASE_URL=mysql://usuario:password@localhost/inventory_db

# Configuración de email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-contraseña-de-aplicacion
ADMIN_EMAIL=admin@tuempresa.com

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/inventory_system.log

# Configuración de alertas
ALERT_CHECK_INTERVAL=3600  # Segundos entre verificaciones de alertas
EMAIL_NOTIFICATIONS=True

# Configuración de predicciones
FORECAST_DAYS_AHEAD=30
MIN_SALES_HISTORY=7

# Configuración de reposición
DEFAULT_SAFETY_FACTOR=0.2
MIN_ORDER_QUANTITY=10

# Configuración de KPIs
KPI_CALCULATION_INTERVAL=86400  # Segundos entre cálculos de KPIs
REPORT_GENERATION_TIME=08:00  # Hora para generar reportes diarios

# Configuración de seguridad
SESSION_TIMEOUT=3600  # Segundos de timeout de sesión
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800  # Segundos de bloqueo después de intentos fallidos

# Configuración de cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Configuración de archivos
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configuración de API
API_RATE_LIMIT=100  # Requests por minuto
API_VERSION=v1

# Configuración de notificaciones
NOTIFICATION_CHANNELS=email,webhook
WEBHOOK_URL=https://tu-webhook-url.com/inventory-alerts

# Configuración de integraciones
ERP_INTEGRATION=False
ERP_API_URL=
ERP_API_KEY=

# Configuración de backup
BACKUP_ENABLED=True
BACKUP_INTERVAL=86400  # Segundos entre backups
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# Configuración de monitoreo
MONITORING_ENABLED=True
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health
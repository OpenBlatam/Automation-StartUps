{
  "openapi": "3.0.0",
  "info": {
    "title": "CFDI 4.0 IA 2025 API",
    "version": "3.0.0",
    "description": "API REST completa para Sistema de Facturación Electrónica CFDI 4.0 con Inteligencia Artificial",
    "contact": {
      "name": "Sistema de Facturación IA Avanzada",
      "email": "soporte@cfdi4ia.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Servidor de desarrollo"
    },
    {
      "url": "https://api.cfdi4ia.com",
      "description": "Servidor de producción"
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "Endpoints de salud del sistema"
    },
    {
      "name": "Authentication",
      "description": "Endpoints de autenticación"
    },
    {
      "name": "CFDI",
      "description": "Endpoints para gestión de CFDI"
    },
    {
      "name": "Statistics",
      "description": "Endpoints de estadísticas y métricas"
    }
  ],
  "paths": {
    "/api/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check",
        "description": "Verifica el estado del servidor",
        "responses": {
          "200": {
            "description": "Servidor funcionando correctamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Registrar nuevo usuario",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password", "nombre"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  },
                  "nombre": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario registrado exitosamente"
          },
          "400": {
            "description": "Error de validación"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Iniciar sesión",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login exitoso"
          },
          "401": {
            "description": "Credenciales inválidas"
          }
        }
      }
    },
    "/api/protected/cfdi/generate": {
      "post": {
        "tags": ["CFDI"],
        "summary": "Generar CFDI",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["emisor", "receptor", "conceptos"],
                "properties": {
                  "emisor": {
                    "type": "object"
                  },
                  "receptor": {
                    "type": "object"
                  },
                  "conceptos": {
                    "type": "array"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "CFDI generado exitosamente"
          },
          "400": {
            "description": "Error de validación"
          },
          "401": {
            "description": "No autorizado"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}




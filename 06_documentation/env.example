# Configuración de Base de Datos
# SQLite (por defecto para desarrollo)
DATABASE_URL=sqlite:///inventory.db

# Para PostgreSQL en producción, descomentar y configurar:
# DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/inventario_db

# Configuración de Seguridad
SECRET_KEY=your-secret-key-here-change-in-production

# Configuración de Email (Opcional - para notificaciones)
# Descomentar y configurar si deseas habilitar notificaciones por email
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=tu-email@gmail.com
# MAIL_PASSWORD=tu-contraseña-de-aplicacion
# ADMIN_EMAIL=admin@tuempresa.com

# Nota: Para Gmail, necesitas generar una "Contraseña de aplicación" 
# en la configuración de tu cuenta de Google.

# Configuración del Entorno
FLASK_ENV=development  # development, production, testing
DEBUG=false

# Configuración del Servidor
HOST=0.0.0.0
PORT=5000

# Paginación
ITEMS_PER_PAGE=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Alertas
ALERTS_ENABLED=true
ALERTS_CHECK_INTERVAL=300

# Predicciones
FORECAST_DAYS_DEFAULT=30
FORECAST_MIN_DATA_POINTS=10

{
	"name": "kpi-next",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"format": "prettier -w .",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"audit": "npm audit --omit=dev || true",
		"test": "jest --passWithNoTests",
		"prepare": "husky install"
	},
	"dependencies": {
		"next": "^14.2.5",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"pg": "^8.13.1"
	},
	"devDependencies": {
		"@types/node": "^22.7.0",
		"@types/react": "^18.3.6",
		"@types/react-dom": "^18.3.0",
		"eslint": "^9.13.0",
		"eslint-config-next": "^14.2.5",
		"eslint-config-prettier": "^9.1.0",
		"@types/jest": "^29.5.12",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.0.1",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.5",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"typescript": "^5.6.3"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"eslint --fix",
			"prettier -w"
		],
		"*.{json,md,yml,yaml}": [
			"prettier -w"
		]
	}
}

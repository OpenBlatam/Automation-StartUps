{
	"name": "kpi-interface",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "nodemon --watch src --ext ts,tsx --exec tsx src/index.ts",
		"build": "tsc -p .",
		"start": "node dist/index.js",
		"lint": "eslint . --ext .ts,.tsx",
		"format": "prettier -w .",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"audit": "npm audit --omit=dev || true",
		"test": "jest --passWithNoTests",
		"prepare": "husky install"
	},
	"dependencies": {
		"express": "^4.21.1",
		"cors": "^2.8.5",
		"helmet": "^7.1.0",
		"express-rate-limit": "^7.4.0",
		"prom-client": "^15.1.3",
		"envalid": "^8.0.0",
		"dotenv": "^16.4.5",
		"pg": "^8.13.1",
		"swagger-ui-express": "^5.0.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^22.7.0",
		"@types/jest": "^29.5.12",
		"@types/cors": "^2.8.17",
		"@types/morgan": "^1.9.9",
		"@types/supertest": "^2.0.16",
		"@types/express-rate-limit": "^6.0.3",
		"@types/swagger-ui-express": "^4.1.7",
		"@typescript-eslint/eslint-plugin": "^8.6.0",
		"@typescript-eslint/parser": "^8.6.0",
		"eslint": "^9.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.5",
		"supertest": "^7.0.0",
		"prettier": "^3.3.3",
		"morgan": "^1.10.0",
		"nodemon": "^3.1.7",
		"tsx": "^4.19.0",
		"typescript": "^5.6.3"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"eslint --fix",
			"prettier -w"
		],
		"*.{json,md,yml,yaml}": [
			"prettier -w"
		]
	}
}

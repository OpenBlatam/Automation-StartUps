#!/usr/bin/env node
/**
 * Development Server Script
 * Inicia el servidor en modo desarrollo con hot reload
 */

const { spawn } = require('child_process');
const path = require('path');

console.log('ðŸš€ Iniciando servidor en modo desarrollo...\n');

// Configurar variables de entorno
process.env.NODE_ENV = 'development';

// Usar nodemon para hot reload
const server = spawn('nodemon', [
  'server.js',
  '--watch',
  '*.js',
  '--ext',
  'js'
], {
  stdio: 'inherit',
  shell: true,
  cwd: path.join(__dirname, '..')
});

server.on('error', (err) => {
  console.error('âŒ Error al iniciar servidor:', err);
  process.exit(1);
});

server.on('exit', (code) => {
  console.log(`\nâš ï¸  Servidor finalizado con cÃ³digo: ${code}`);
  process.exit(code);
});

// Capturar seÃ±ales
process.on('SIGINT', () => {
  console.log('\nðŸ›‘ Deteniendo servidor...');
  server.kill('SIGINT');
  process.exit(0);
});

process.on('SIGTERM', () => {
  console.log('\nðŸ›‘ Deteniendo servidor...');
  server.kill('SIGTERM');
  process.exit(0);
});




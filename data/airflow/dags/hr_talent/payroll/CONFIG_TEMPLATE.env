# Template de Configuración - Sistema de Nómina
# Copiar este archivo a .env y completar con valores reales

# ============================================
# PostgreSQL
# ============================================
PAYROLL_POSTGRES_CONN_ID=postgres_default

# ============================================
# OCR Configuration
# ============================================
# Tesseract
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=eng

# AWS Textract (opcional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Cloud Vision (opcional)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
GOOGLE_PROJECT_ID=your-project-id

# ============================================
# Payroll Configuration
# ============================================
PAYROLL_REGULAR_HOURS_PER_WEEK=40.0
PAYROLL_OVERTIME_MULTIPLIER=1.5
PAYROLL_DOUBLE_TIME_MULTIPLIER=2.0
PAYROLL_DEFAULT_TAX_RATE=0.25
PAYROLL_DEFAULT_BENEFITS_RATE=0.10
PAYROLL_MINIMUM_WAGE=7.25

# ============================================
# Approval Configuration
# ============================================
PAYROLL_AUTO_APPROVE_THRESHOLD=50.0
PAYROLL_HIGH_VALUE_THRESHOLD=5000.0

# ============================================
# OCR Configuration
# ============================================
PAYROLL_OCR_CONFIDENCE_THRESHOLD=0.7
PAYROLL_OCR_RETRY_ATTEMPTS=3

# ============================================
# Rate Limiting
# ============================================
PAYROLL_RATE_LIMIT_CALC=50
PAYROLL_RATE_LIMIT_OCR=20
PAYROLL_RATE_LIMIT_DB=100

# ============================================
# Circuit Breakers
# ============================================
PAYROLL_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
PAYROLL_CIRCUIT_BREAKER_TIMEOUT=60

# ============================================
# Notifications
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
EMAIL_API_URL=https://api.example.com/email
PAYROLL_WEBHOOK_URL=https://api.example.com/webhook
PAYROLL_WEBHOOK_SECRET_KEY=your_secret_key

# ============================================
# Integrations
# ============================================
# QuickBooks
QUICKBOOKS_ACCESS_TOKEN=your_access_token
QUICKBOOKS_REALM_ID=your_realm_id
QUICKBOOKS_BASE_URL=https://sandbox-quickbooks.api.intuit.com

# Stripe
STRIPE_API_KEY=sk_test_your_key
STRIPE_TEST_MODE=true

# ============================================
# Feature Flags
# ============================================
PAYROLL_FEATURE_ADVANCED_OCR=true
PAYROLL_FEATURE_AUTO_APPROVAL=true
PAYROLL_FEATURE_ANOMALY_DETECTION=true
PAYROLL_FEATURE_PREDICTIONS=true
PAYROLL_FEATURE_COMPLIANCE_CHECKS=true
PAYROLL_FEATURE_CIRCUIT_BREAKERS=true
PAYROLL_FEATURE_RATE_LIMITING=true
PAYROLL_FEATURE_WEBHOOKS=true
PAYROLL_FEATURE_SYNC_ENABLED=true
PAYROLL_FEATURE_VERSIONING=true

# ============================================
# Cache Configuration
# ============================================
PAYROLL_CACHE_ENABLED=true
PAYROLL_CACHE_TTL_SECONDS=1800

# ============================================
# Compliance
# ============================================
PAYROLL_COMPLIANCE_CHECK_ENABLED=true
PAYROLL_COMPLIANCE_MIN_WITHHOLDING_RATE=0.10

# ============================================
# Budget (opcional)
# ============================================
PAYROLL_BUDGET=100000.00

# ============================================
# Maintenance
# ============================================
PAYROLL_RETENTION_DAYS=365
PAYROLL_EXPENSE_RETENTION_DAYS=730


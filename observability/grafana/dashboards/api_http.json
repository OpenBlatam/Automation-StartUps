{
  "title": "API HTTP (KPIs)",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Latency p50/p90/p99",
      "targets": [
        { "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket{route!=""}[5m])) by (le))", "legendFormat": "p50" },
        { "expr": "histogram_quantile(0.9, sum(rate(http_request_duration_seconds_bucket{route!=""}[5m])) by (le))", "legendFormat": "p90" },
        { "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{route!=""}[5m])) by (le))", "legendFormat": "p99" }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "type": "timeseries",
      "title": "Request rate by route",
      "targets": [
        { "expr": "sum(rate(http_request_duration_seconds_count{route!=""}[5m])) by (route)", "legendFormat": "{{route}}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error rate (5xx)",
      "targets": [
        { "expr": "sum(rate(http_request_duration_seconds_count{status=~\"5..\"}[5m]))", "legendFormat": "5xx" }
      ]
    }
  ]
}





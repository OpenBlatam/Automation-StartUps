    {
      "parameters": {
        "mode": "runOnceForAllItems",
        "jsCode": "// Generar carrusel usando el script Python\nconst { execSync } = require('child_process');\nconst path = require('path');\n\nconst testimonial = $input.item.json.data.testimonial || $input.item.json.testimonial;\nconst targetAudience = $input.item.json.data.target_audience || $input.item.json.target_audience;\nconst platform = $input.item.json.data.platform || $input.item.json.platform || 'instagram';\n\nconst scriptPath = path.join(__dirname, '../scripts/testimonial_carousel_generator.py');\n\nconst cmd = [\n  'python3',\n  scriptPath,\n  `\"${testimonial.replace(/\"/g, '\\\"')}\"`,\n  `\"${targetAudience.replace(/\"/g, '\\\"')}\"`,\n  '--platform', platform,\n  '--slides', '6',\n  '--output', 'json'\n].join(' ');\n\ntry {\n  const output = execSync(cmd, {\n    encoding: 'utf-8',\n    env: process.env,\n    maxBuffer: 10 * 1024 * 1024\n  });\n  \n  const carousel = JSON.parse(output.trim());\n  \n  return {\n    json: {\n      carousel: carousel,\n      post_data: $input.item.json.data,\n      type: 'carousel'\n    }\n  };\n} catch (error) {\n  return {\n    json: {\n      error: error.message,\n      post_data: $input.item.json.data,\n      type: 'carousel_error'\n    }\n  };\n}"
      },

    {
      "parameters": {
        "mode": "runOnceForAllItems",
        "jsCode": "// Sugerir template basado en análisis\nconst testimonial = $input.item.json.testimonial;\nconst targetAudience = $input.item.json.target_audience;\nconst analysis = $input.item.json.analysis || {};\n\n// Lógica simple de sugerencia\nlet suggestedTemplate = 'general';\n\nconst testimonialLower = testimonial.toLowerCase();\nconst audienceLower = targetAudience.toLowerCase();\n\nif (testimonialLower.includes('curso') || testimonialLower.includes('aprendí')) {\n  suggestedTemplate = 'course_education';\n} else if (testimonialLower.includes('empresa') || testimonialLower.includes('equipo') || testimonialLower.includes('productividad')) {\n  suggestedTemplate = 'b2b_success';\n} else if (testimonialLower.includes('transformación') || testimonialLower.includes('cambio')) {\n  suggestedTemplate = 'product_transformation';\n} else if (testimonialLower.includes('recomiendo') || testimonialLower.includes('servicio')) {\n  suggestedTemplate = 'service_recommendation';\n} else if (testimonialLower.includes('rápido') || testimonialLower.includes('días') || testimonialLower.includes('semanas')) {\n  suggestedTemplate = 'quick_result';\n}\n\nreturn {\n  json: {\n    suggested_template: suggestedTemplate,\n    testimonial: testimonial,\n    target_audience: targetAudience,\n    platform: $input.item.json.platform || 'general',\n    generate_carousel: $input.item.json.generate_carousel,\n    generate_variations: $input.item.json.generate_variations\n  }\n};"
      },
